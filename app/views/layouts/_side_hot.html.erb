<div id="side_hot">
  <%= image_tag 'hot_coupons_side.png', :alt => 'Hot Coupons', :size => '255x27' %>
  <% side_hot_coupons.each do |coupon| %>
    <div class='side_hot_coupon'>
      <div class='side_hot_actions'>
        <div class="addthis_default_style addthis_toolbox">
          <a class="addthis_button_facebook" addthis:url="<%= base_url+coupon_link(coupon) %>"></a><a class="addthis_button_twitter" addthis:url="<%= base_url+coupon_link(coupon) %>" addthis:title="Check Out this Coupon for <%= coupon.business.name %>" ></a>
        </div>
      </div>   
      <div class='business_name'><%= link_to coupon.business.name, coupon_link(coupon) %></div>
      <div class='description'><%= link_to coupon.short_description, coupon_link(coupon) %></div>
    </div>
  <% end %>
</div>