<div class="title">Change Password</div>

<%= form_for(@admin_user, :url => admin_admin_user_path, :html => { :class => 'admin_form' } ) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= label_tag :old_password %>
    <%= password_field_tag :old_password, nil, :class => 'short_field' %>
  </div>
  <div class="field">
    <%= f.label :password, "New Password" %>
    <%= f.password_field :password, :class => 'short_field' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Re-enter New Password" %>
    <%= f.password_field :password_confirmation, :class => 'short_field' %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :disable_with => 'Saving...', :class => 'lg_button' %>
  </div>
<% end %>
  