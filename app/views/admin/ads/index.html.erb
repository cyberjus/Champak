<% content_for :side_menu do %>
  <div id="admin_side_menu">
    <%= button_to 'Create New Ad', new_admin_ad_path, :method => :get, :class => 'lg_button' %>
  </div>
<% end %>

<div class="title"><%= @title %></div>

<table class="admin_table">
  <tr>
    <th>Name</th>
    <th>URL</th>
    <th>Type</th>
  </tr>
  <% @ads.each do |ad| %>
    <tr onClick="document.location='<%= edit_admin_ad_path(ad) %>'"> 
      <td><%= ad.name %></td>
      <td><%= ad.url %></td>
      <td><%= ad.banner_type %></td>
    </tr>
  <% end %>
</table>
  
<div class='admin_paging'><%= will_paginate %></div>
